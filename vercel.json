{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXTAUTH_URL": {
      "type": "string",
      "value": "https://$VERCEL_URL"
    },
    "VERCEL_URL": {
      "type": "system"
    }
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url"
    }
  }
} 